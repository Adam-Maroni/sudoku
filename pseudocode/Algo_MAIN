START
    IF (VALIDATE_INPUT)
        PARSING
    ELSE 
        ERROR (Invalid input)
    ENDIF
    PRINT(grid)
    IF (first cell equal to '0' is not in bound)
        ERROR (No cell to start by)
    ENDIF
    IF ( BACKTRACKING(first_cell) equal 1)
        SUCCESS - print result
        PRINT(grid)
    ELSE
        FAIL - no solution found
    ENDIF
END